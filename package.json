{
  "name": "ts-node-ca-service-boilerplate",
  "version": "0.0.0",
  "description": "A financial service built with Node.js that follows Clean Architecture, TDD, SOLID and DDD principles",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main/server.js",
    "dev": "nodemon server.ts",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "test": "jest --passWithNoTests --silent --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- --passWithNoTests --watch -c jest.unit.config.js",
    "test:integration": "npm test -- --passWithNoTests --watch -c jest.integration.config.",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info",
    "drizzle:migration:generate": "drizzle-kit generate",
    "drizzle:migrate": "DB_MIGRATING=true ts-node src/infrastructure/presistence/drizzle/migrate.ts",
    "drizzle:seed": "DB_SEEDING=true node -r esbuild-register src/infrastructure/presistence/drizzle/seed.ts",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix src/**/*.ts"
  },
  "author": "Codeawan",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "dotenv-expand": "^11.0.6",
    "drizzle-kit": "^0.22.7",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "faker": "^5.5.3",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.7.0"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.31.2",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "validator": "^13.11.0",
    "zod": "^3.23.8"
  },
  "_moduleAliases": {
    "@src": "dist"
  }
}
